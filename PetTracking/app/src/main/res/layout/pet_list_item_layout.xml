<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="2dp"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_margin="2dp"
        android:backgroundTint="#F0CFF6"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="2dp">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_baseline_campaign_24"
                android:id="@+id/pet_fragment_image"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Name : "
                android:layout_marginTop="40dp"
                android:id="@+id/pet_name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#6629AF"
               android:layout_marginLeft="40dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Kind : "
                android:layout_marginTop="20dp"
                android:id="@+id/pet_tur_name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#6629AF"
                android:layout_marginLeft="40dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Genus : "
                android:layout_marginTop="20dp"
                android:id="@+id/pet_cins_name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#6629AF"
                android:layout_marginLeft="40dp">

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>