<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#F5BE66CD"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        card_view:cardCornerRadius="15dp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="6dp"
        card_view:cardBackgroundColor="#F5F0CFF6"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:screenReaderFocusable="true"
            android:layout_margin="2dp">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:src="@drawable/golden"
                android:id="@+id/pet_fragment_image"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Name : "
                android:layout_marginTop="30dp"
                android:id="@+id/pet_name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#6629AF"
               android:layout_marginLeft="5dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Kind : "
                android:layout_marginTop="20dp"
                android:id="@+id/pet_tur_name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#6629AF"
                android:layout_marginLeft="5dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Genus : "
                android:layout_marginTop="20dp"
                android:id="@+id/pet_cins_name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#6629AF"
                android:layout_marginLeft="5dp">

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</LinearLayout>