<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ccff90"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_ana"
        app:cardElevation="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/mainFrameLayout"
            android:layout_height="match_parent">

        </FrameLayout>


    </androidx.cardview.widget.CardView>



    <androidx.appcompat.widget.Toolbar
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_menu"
        app:cardElevation="20dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/alt_menu_layout"
        android:layout_height="50dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1">
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_local_phone_24">

            </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"

                android:layout_weight="1">
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/home_menu_buton"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_home_24">

                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1">
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/ic_baseline_power_settings_new_24">

                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>



</RelativeLayout>